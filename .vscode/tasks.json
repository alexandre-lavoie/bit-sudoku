{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "G++ Build",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension}.exe",
                "-static-libgcc", 
                "-static-libstdc++"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}